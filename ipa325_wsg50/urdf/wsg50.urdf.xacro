<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wsg50">

    <xacro:macro name="wsg50" params="parent prefix *origin">

        <joint name="${prefix}mount" type="fixed" >
            <xacro:insert_block name="origin" />
            <parent link="${parent}" />
            <child link="${prefix}wsg_base" />
        </joint>

        <link name="${prefix}wsg_base">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.5"/>
                <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://ipa325_wsg50/meshes/WSG50_110.stl"/>
                </geometry>
                <material name="wsg50-greyish">
                    <color rgba="0.8 0.8 0.8 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://ipa325_wsg50/meshes/WSG50_110.stl"/>
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}finger_base_joint" type="fixed" >
            <origin xyz="0.0 0.0 0.0725" rpy="0 0 0" />
            <parent link="${prefix}wsg_base" />
            <child link="${prefix}finger_base" />
        </joint>

        <link name="${prefix}finger_base"/>

        <joint name="${prefix}finger_left_joint" type="prismatic">
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <parent link="${prefix}finger_base" />
            <child link="${prefix}finger_left" />
            <axis xyz="1 0 0"/>
            <limit effort="80.0" lower="0" upper="0.06" velocity="0.42" />
        </joint>

        <link name="${prefix}finger_left"/>

        <joint name="${prefix}finger_right_joint" type="prismatic">
            <origin xyz="0.0 0.0 0.0" rpy="0 0 ${pi}" />
            <parent link="${prefix}finger_base" />
            <child link="${prefix}finger_right" />
            <axis xyz="1 0 0"/>
            <limit effort="80.0" lower="0" upper="0.06" velocity="0.42" />
            <mimic joint="${prefix}finger_left_joint"/>

        </joint>

        <link name="${prefix}finger_right"/>



    </xacro:macro>

</robot>
